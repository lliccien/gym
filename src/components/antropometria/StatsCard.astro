---
const { title, value, unit = '', icon, id } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 border border-gray-200" id={id}>
	<div class="flex items-center justify-between">
		<div>
			<p class="text-sm font-medium text-gray-600">{title}</p>
			<div class="flex items-baseline">
				<p class="text-2xl font-semibold text-gray-900 stat-value">{value}</p>
				{unit && <span class="ml-1 text-sm text-gray-500">{unit}</span>}
			</div>
		</div>
		<div class="text-3xl">{icon}</div>
	</div>
</div>
